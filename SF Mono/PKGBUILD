package() {
  install -Dm644 -t "${pkgdir}/usr/share/fonts/${pkgname}/otf" "${srcdir}/SF-Mono-Bold.otf"
  install -Dm644 -t "${pkgdir}/usr/share/fonts/${pkgname}/otf" "${srcdir}/SF-Mono-Regular.otf"
  install -Dm644 -t "${pkgdir}/usr/share/fonts/${pkgname}/otf" "${srcdir}/SF-Mono-Heavy.otf"
  install -Dm644 -t "${pkgdir}/usr/share/fonts/${pkgname}/otf" "${srcdir}/SF-Mono-Semibold.otf"
  install -Dm644 -t "${pkgdir}/usr/share/fonts/${pkgname}/otf" "${srcdir}/SF-Mono-RegularItalic.otf"
  install -Dm644 -t "${pkgdir}/usr/share/fonts/${pkgname}/otf" "${srcdir}/SF-Mono-MediumItalic.otf"
  install -Dm644 -t "${pkgdir}/usr/share/fonts/${pkgname}/otf" "${srcdir}/SF-Mono-LightItalic.otf"
  install -Dm644 -t "${pkgdir}/usr/share/fonts/${pkgname}/otf" "${srcdir}/SF-Mono-HeavyItalic.otf"
  install -Dm644 -t "${pkgdir}/usr/share/fonts/${pkgname}/otf" "${srcdir}/SF-Mono-Light.otf"
  install -Dm644 -t "${pkgdir}/usr/share/fonts/${pkgname}/otf" "${srcdir}/SF-Mono-SemiboldItalic.otf"
  install -Dm644 -t "${pkgdir}/usr/share/fonts/${pkgname}/otf" "${srcdir}/SF-Mono-Medium.otf"
  install -Dm644 -t "${pkgdir}/usr/share/fonts/${pkgname}/otf" "${srcdir}/SF-Mono-BoldItalic.otf"
